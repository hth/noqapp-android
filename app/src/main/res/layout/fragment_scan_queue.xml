<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_top"
    android:weightSum="1"
    android:orientation="vertical"
    android:visibility="gone"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:gravity="center"
        android:background="@drawable/home_top_bg"
        android:orientation="vertical">
        <com.noqapp.client.views.cutomviews.TextViewRalewayRegular
            style="@style/style_join_queue_tv"
            android:id="@+id/tv_store_name"
            android:textColor="@color/colorActionbar"
            android:textSize="24sp"/>
        <com.noqapp.client.views.cutomviews.TextViewRobotoRegular
            style="@style/style_join_queue_tv"
            android:id="@+id/tv_queue_name"
            android:layout_below="@+id/tv_store_name"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            />
        <com.noqapp.client.views.cutomviews.TextViewRobotoLight
            style="@style/style_join_queue_tv"
            android:id="@+id/tv_address"
            android:layout_below="@+id/tv_queue_name"
            android:textColor="@color/colorAddress"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"/>
        <com.noqapp.client.views.cutomviews.TextViewRobotoLight
            style="@style/style_join_queue_tv"
            android:id="@+id/tv_mobile"
            android:layout_below="@+id/tv_address"
            android:textColor="@color/colorMobile"
            android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".33"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/strut"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color_seprator"/>
                />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@id/strut"
                    android:layout_alignParentLeft="true"
                    android:gravity="center">
                    <com.noqapp.client.views.cutomviews.TextViewRalewayRegular
                        android:id="@+id/tv_current"
                        style="@style/style_join_queue_tv"
                        android:text="current"
                        android:textColor="@color/colorAddress"
                        android:textSize="15sp"
                         />
                    <com.noqapp.client.views.cutomviews.TextViewRobotoLight
                        android:id="@+id/tv_current_value"
                        android:layout_below="@+id/tv_current"
                        style="@style/style_join_queue_tv"
                        android:textColor="@color/colorMobile"
                        android:textSize="36sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/strut"
                    android:layout_alignParentRight="true"
                    android:gravity="center">
                    <com.noqapp.client.views.cutomviews.TextViewRalewayRegular
                        android:id="@+id/tv_total"
                        style="@style/style_join_queue_tv"
                        android:text="total"
                        android:textColor="@color/colorAddress"
                        android:textSize="15sp" />
                    <com.noqapp.client.views.cutomviews.TextViewRobotoLight
                        android:id="@+id/tv_total_value"
                        android:layout_below="@+id/tv_total"
                        style="@style/style_join_queue_tv"
                        android:textSize="36sp"
                        android:textColor="@color/color_total_val"
                      />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp"
                android:background="@color/color_seprator"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".66"
            >
            <com.noqapp.client.views.cutomviews.CustomButton
                android:id="@+id/btn_joinqueue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:text="@string/join"
                android:drawableLeft="@mipmap/join_button"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:layout_centerInParent="true"
                android:textColor="@color/colorMobile"
                android:background="@drawable/button_drawable"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_grey_bg"

        android:gravity="center">

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/camera" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/style_join_queue_tv"
            android:layout_below="@+id/iv_camera"
            android:layout_marginBottom="20dp"
            android:text="You don't have any scan data\n      Please scan barcode"
            android:textColor="@color/color_list_text"
            android:textSize="15sp" />

        <com.noqapp.client.views.cutomviews.CustomButton
            android:id="@+id/btnscanQRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label"
            android:layout_centerInParent="true"
            android:background="@drawable/button_drawable"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/scan"
            android:textColor="@color/colorMobile"
            android:textSize="15sp" />
    </RelativeLayout>
</FrameLayout>