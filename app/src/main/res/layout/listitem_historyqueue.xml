<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin"
    android:orientation="horizontal">
<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/txtNumber"
    android:layout_weight="0.10"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:orientation="vertical"
        >
        <com.noqapp.client.views.cutomviews.TextViewRalewayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtStoreName"
            android:textColor="@color/color_list_text"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_list_text"
            android:id="@+id/txtStorePhoneNo"
            android:textSize="15sp"/>
    </LinearLayout>
    <com.noqapp.client.views.cutomviews.TextViewRobotoLight
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/txtToken"
        android:layout_weight="0.25"
        android:textColor="@color/color_list_text"
        android:gravity="center"
        android:textSize="24sp" />
</LinearLayout>
