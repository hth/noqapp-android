<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/ll_side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/tv_store_rating"
                    android:layout_toRightOf="@+id/iv_main"
                    android:orientation="vertical">


                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_specialization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="MBBS"
                        android:textSize="12sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="12sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_phoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/ic_phone"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_store_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_star_white_fill"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:text="0.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/rating_text_size" />

                <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                    android:id="@+id/tv_store_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_store_rating"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:textSize="12sp" />


            </RelativeLayout>

            <View
                android:id="@+id/view_separator"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_top"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/color_invite_details" />

            <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                android:id="@+id/tv_store_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_separator"
                android:text="6 years exp *Consult fees Rs 200"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


