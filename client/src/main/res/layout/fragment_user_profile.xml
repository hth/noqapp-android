<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:elevation="0dp"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp">


                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.noqapp.android.client.views.customviews.TextViewRalewayBold
                        style="@style/style_register_tv"
                        android:text="@string/available_other_place" />


                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        style="@style/style_register_tv"
                        android:paddingTop="5dp"
                        android:text="DayNight Care Center" />


                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_available_other_place"
                        style="@style/style_register_tv"
                        android:inputType="textMultiLine"
                        android:text="C-32, HiraKunj Apartments, Near Maha Lakshmi Temple,Mumbai" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        style="@style/style_register_tv"
                        android:paddingTop="5dp"
                        android:text="Child Helth Care Center" />


                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        style="@style/style_register_tv"
                        android:inputType="textMultiLine"
                        android:text="A-92, Radha Swami Apartments, Near Maha Gym Khana,Mumbai" />


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>