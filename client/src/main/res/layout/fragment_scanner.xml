<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/cell_size"
        android:paddingLeft="@dimen/screen_padding_home"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/screen_padding_home"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:src="@drawable/barcode" />

        <TextView
            android:id="@+id/tv_scan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/nav_arrow"
            android:layout_toRightOf="@+id/iv_scan"
            android:text="@string/scan_qr"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_fourteen"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scan_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/nav_arrow"
            android:layout_toRightOf="@+id/iv_scan"
            android:text="@string/scan_info"
            android:textColor="#cc000000"
            android:textSize="@dimen/text_size_twelve" />

        <ImageView
            android:id="@+id/nav_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>



