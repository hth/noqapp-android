<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@android:color/white"-->
    <!--android:overScrollMode="never">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".40"
            android:background="@drawable/home_top_bg"
            android:orientation="vertical">

            <com.noqapp.android.client.views.cutomviews.TextViewRalewayRegular
                android:id="@+id/tv_store_name"
                style="@style/style_join_queue_tv"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Costco"
                android:textColor="@color/colorActionbar"
                android:textSize="24sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoRegular
                android:id="@+id/tv_queue_name"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_store_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_address"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_queue_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Location -Address is Vashi \n Railway station"
                android:textColor="@color/colorAddress"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="20sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_mobile"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_address"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@mipmap/date"
                android:drawablePadding="4dp"
                android:text="Date of service : Today"
                android:textColor="@color/colorMobile"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:background="@drawable/review_center"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_service"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_address"
                android:layout_gravity="center_horizontal"
                android:text="How was your service?"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:scaleX=".75"
                    android:scaleY=".75"
                    android:stepSize="1"
                    android:theme="@style/RatingBar" />

                <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                    android:id="@+id/tv_rating_value"
                    style="@style/style_join_queue_tv"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ratingBar"
                    android:text="0.0"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".40"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight

                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_queue_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="@string/text_time_saved"
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:weightSum="1">

                <com.noqapp.android.client.views.cutomviews.SeekbarWithIntervals
                    android:id="@+id/seekbarWithIntervals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight

                    android:id="@+id/tv_hr_saved"
                    style="@style/style_join_queue_tv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/colorAddress"
                    android:textSize="18sp" />

            </LinearLayout>


            <com.noqapp.android.client.views.cutomviews.ButtonRalewayRegular
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="left|center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/backgroundbtn"
                android:drawableLeft="@mipmap/plus"
                android:gravity="center"
                android:paddingLeft="130dp"
                android:paddingRight="110dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>