<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.noqapp.android.client.views.cutomviews.TextViewRalewayRegular
                android:id="@+id/tv_store_name"
                style="@style/style_join_queue_tv"
                android:layout_gravity="center_horizontal"
                android:text="Costco"
                android:textColor="@color/colorActionbar"
                android:textSize="24sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoRegular
                android:id="@+id/tv_queue_name"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_store_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_address"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_queue_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Location -Address is Vashi"
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_mobile"
                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_address"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Date of service : Today"
                android:textColor="@color/colorMobile"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                    android:id="@+id/tv_service"
                    style="@style/style_join_queue_tv"
                    android:layout_below="@+id/tv_address"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="How was your service?"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar_selector"
                    android:stepSize="1.0" />
            </LinearLayout>

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight

                style="@style/style_join_queue_tv"
                android:layout_below="@+id/tv_queue_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="How much time did you saved ? "
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="1">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight=".7"
                    android:max="100"
                    android:maxHeight="10dp"
                    android:maxWidth="15dp"
                    android:minHeight="10dp"
                    android:minWidth="15dp"
                    android:paddingBottom="10px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="10px"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_seekbar_progress"
                    android:splitTrack="false"
                    android:thumb="@drawable/circle_seekbar"

                    />

                <TextView
                    android:id="@+id/tv_seekbar_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:layout_weight=".3"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>


            <com.noqapp.android.client.views.cutomviews.ButtonRalewayRegular
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_drawable"
                android:drawableLeft="@mipmap/join_button"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/submit"
                android:textColor="@color/colorMobile"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>