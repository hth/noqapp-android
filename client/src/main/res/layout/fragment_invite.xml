<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/invite_bg"
        android:orientation="vertical"
        android:padding="20dp">


        <com.noqapp.android.client.views.cutomviews.TextViewRalewayRegular
            android:id="@+id/tv_title"
            style="@style/style_invite_tv"
            android:textColor="@color/colorActionbar"
            android:textSize="20sp" />

        <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
            android:id="@+id/tv_details"
            style="@style/style_invite_tv"
            android:textColor="@color/colorAddress"
            android:textSize="16sp" />

        <com.noqapp.android.client.views.cutomviews.TextViewRalewayRegular
            android:id="@+id/tv_how_it_works"
            style="@style/style_invite_tv"
            android:text="@string/how_it_works"
            android:textColor="@color/colorActionbar"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/invite" />

        <com.noqapp.android.client.views.cutomviews.TextViewRalewayRegular
            style="@style/style_invite_tv"
            android:text="@string/your_invite_code"
            android:textColor="@color/color_total_val"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/square_white_bg_drawable"
            android:padding="5dp">

            <com.noqapp.android.client.views.cutomviews.TextViewRobotoLight
                android:id="@+id/tv_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"/>

            <com.noqapp.android.client.views.cutomviews.TextEditRalewayRegular
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/copy"
                android:textColor="@color/colorActionbar"
                android:textSize="15sp" />
        </RelativeLayout>


        <com.noqapp.android.client.views.cutomviews.ButtonRalewayRegular
            android:id="@+id/btn_send_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/send_invite"
            android:text="@string/send_invite"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>