<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:orientation="vertical">

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_serving_no"
                            style="@style/style_join_queue_tv"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                            style="@style/style_join_queue_tv"
                            android:gravity="center"
                            android:text="@string/serving_now"
                            android:textColor="@color/colorAddress"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_token"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/round_corner_business"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                            style="@style/style_join_queue_tv"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Your Token no"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:orientation="vertical">

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_estimated_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                            style="@style/style_join_queue_tv"
                            android:text="will be served in"
                            android:textColor="@color/colorAddress"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_change_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/square_bg_drawable"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_after"
                        style="@style/style_join_queue_tv"
                        android:gravity="center"
                        android:text="@string/you_are_after"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_how_long"
                        style="@style/style_join_queue_tv"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="36sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_invite_details"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:id="@+id/ll_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:weightSum="1">

                            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                                android:id="@+id/add_person"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:text="Patient Name"
                                android:textColor="@color/colorAddress"
                                android:padding="10dp"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/sp_name_list"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight=".10"
                                android:clickable="false"
                                android:visibility="invisible" />

                            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                                android:id="@+id/tv_add"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".50"
                                android:text="Add Dependent"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/white" />
                    </LinearLayout>

                    <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Queue Details"
                        android:textColor="@color/colorAddress"
                        android:textSize="18sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        android:id="@+id/tv_queue_name"
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                        android:id="@+id/tv_hour_saved"
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="18sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                        android:id="@+id/tv_mobile"
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorMobile"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        android:id="@+id/tv_store_name"
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="20sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                        android:id="@+id/tv_address"
                        style="@style/style_join_queue_tv"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="18sp" />


                </LinearLayout>

                <com.noqapp.android.client.views.customviews.ButtonRalewayRegular
                    android:id="@+id/btn_cancel_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_drawable"
                    android:drawableLeft="@mipmap/cancel_button"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorMobile"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
