<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_vibrator_off"
            android:layout_alignParentTop="true"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/blue_gradient"
                            android:orientation="horizontal" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="25dp"
                            android:padding="10dp"
                            card_view:cardBackgroundColor="@android:color/white"
                            card_view:cardCornerRadius="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_profile"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:elevation="5dp"
                                    android:scaleType="centerCrop"
                                    app:civ_border_color="#FFFFFFFF"
                                    app:civ_border_width="0dp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/iv_profile"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical"
                                    android:padding="@dimen/list_item_margin">


                                    <TextView
                                        android:id="@+id/tv_queue_name"
                                        style="@style/style_join_queue_tv"
                                        android:layout_marginBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/text_size_sixteen"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_hour_saved"
                                        style="@style/style_join_queue_tv"
                                        android:layout_marginBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/colorAddress"
                                        android:textSize="@dimen/text_size_twelve" />

                                    <TextView
                                        android:id="@+id/tv_mobile"
                                        style="@style/style_join_queue_tv"
                                        android:layout_marginBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/colorMobile"
                                        android:textSize="@dimen/text_size_twelve"
                                        android:visibility="gone" />

                                    <RelativeLayout
                                        android:id="@+id/rl_rating"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/tv_rating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_toLeftOf="@+id/tv_rating_review"
                                            android:drawableLeft="@drawable/ic_star_white_fill"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/theme_color_red"
                                            android:text="0.0"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/rating_text_size"
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/tv_rating_review"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:gravity="right"
                                            android:text=""
                                            android:textColor="@color/colorAddress"
                                            android:textSize="@dimen/text_size_twelve" />
                                    </RelativeLayout>


                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_delay_in_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/theme_color_red"
                        android:textSize="@dimen/text_size_twelve" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="63dp"
                                android:layout_height="60.3dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/stethoscope" />

                            <LinearLayout
                                android:layout_width="106.9dp"
                                android:layout_height="75.7dp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/blue_gradient_round"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_serving_no"
                                    style="@style/style_join_queue_tv"
                                    android:gravity="center"
                                    android:textColor="#505050"
                                    android:textSize="28.3sp" />

                                <TextView
                                    style="@style/style_join_queue_tv"
                                    android:gravity="center"
                                    android:text="@string/serving_now"
                                    android:textColor="#505050"
                                    android:textSize="@dimen/join_section_small_text" />
                            </LinearLayout>

                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="63dp"
                                android:layout_height="60.3dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:background="@drawable/medicine" />

                            <LinearLayout
                                android:layout_width="106.9dp"
                                android:layout_height="75.7dp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/orange_gradient"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_token"
                                    style="@style/style_join_queue_tv"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="28.3sp" />

                                <TextView
                                    style="@style/style_join_queue_tv"
                                    android:gravity="center"
                                    android:text="@string/your_token"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/join_section_small_text" />
                            </LinearLayout>
                        </FrameLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_estimated_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#80000000"
                        android:textSize="@dimen/text_size_twelve" />


                    <LinearLayout
                        android:id="@+id/ll_change_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/square_bg_drawable"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/tv_after"
                            style="@style/style_join_queue_tv"
                            android:gravity="center"
                            android:text="@string/you_are_after"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_fourteen" />

                        <TextView
                            android:id="@+id/tv_how_long"
                            style="@style/style_join_queue_tv"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="28sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/patient_name"
                            android:textColor="#606060"
                            android:textSize="@dimen/text_size_twelve" />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/style_join_queue_tv"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorAddress"
                            android:textSize="@dimen/text_size_sixteen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/address"
                            android:textColor="#606060"
                            android:textSize="@dimen/text_size_twelve" />

                        <TextView
                            android:id="@+id/tv_store_name"
                            style="@style/style_join_queue_tv"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorAddress"
                            android:textSize="@dimen/text_size_sixteen" />


                        <TextView
                            android:id="@+id/tv_address"
                            style="@style/style_join_queue_tv"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#606060"
                            android:textSize="@dimen/text_size_fourteen" />

                    </LinearLayout>



                    <androidx.cardview.widget.CardView
                            android:id="@+id/card_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            card_view:cardBackgroundColor="@color/white"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="2dp"
                            android:visibility="gone"
                            card_view:cardUseCompatPadding="true">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:gravity="left"
                                    android:text="@string/order_details"
                                    android:textSize="@dimen/store_info"/>

                            <LinearLayout
                                    android:id="@+id/ll_order_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="vertical"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp">


                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/ll_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:gravity="left"
                                            android:text="@string/total_amount"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/store_info"/>

                                    <TextView
                                            android:id="@+id/tv_total_order_amt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:gravity="right"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/store_info"/>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/tv_payment_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:gravity="left"
                                            android:text="@string/payment_due"
                                            android:textSize="@dimen/text_size_fourteen"/>

                                    <TextView
                                            android:id="@+id/tv_due_amt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:gravity="right"
                                            android:visibility="invisible"
                                            android:textSize="@dimen/text_size_fourteen"/>
                                </RelativeLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_standard_height"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_bg_enable"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Pay"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_sixteen"
                        android:textStyle="normal"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_cancel_queue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_standard_height"
                        android:layout_margin="20dp"
                        android:background="@drawable/btn_bg_inactive"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_color"
                        android:textSize="@dimen/text_size_sixteen"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>


        </ScrollView>

        <TextView
            android:id="@+id/tv_vibrator_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="#BF000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/msg_vibrator_off"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_sixteen"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
