<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99ffffff"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include
                    layout="@layout/listitem_medical_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_thumb_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Reports:"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="3dp"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:id="@+id/ll_xray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="X-ray"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_xray"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_xray_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:text="Observation"
                            android:layout_marginStart="5dp"

                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_sono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Sono"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_sono"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_sono_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:text="Observation"

                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Scan"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_scan"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_scan_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:text="Observation"

                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_path"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Pathology"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_pathology"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_pathology_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:text="Observation"

                            android:drawablePadding="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Spec"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_spec"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_spec_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:text="Observation"

                            android:layout_marginStart="5dp"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_mri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="MRI"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/tv_attachment_mri"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical|start"
                            android:text="Attachment "
                            android:drawableLeft="@drawable/attachment"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_observation_mri_label"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:text="Observation"

                            android:drawablePadding="5dp"
                            android:textSize="@dimen/text_size_ten"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#ededed"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="Patient Name: "/>

                <TextView
                        android:id="@+id/tv_patient_name"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_chief_complaints"/>

                <TextView
                        android:id="@+id/tv_complaints_temp"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_past_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_past_history"/>

                <TextView
                        android:id="@+id/tv_past_history"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_family_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_family_history"/>

                <TextView
                        android:id="@+id/tv_family_history"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_known_allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_known_allergies"/>

                <TextView
                        android:id="@+id/tv_known_allergy"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_physical_exam"/>

                <LinearLayout
                        android:id="@+id/ll_physical"
                        style="@style/style_mdh_details"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#ededed"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_clinical_finding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_clinical_findings"/>

                <TextView
                        android:id="@+id/tv_clinical_finding"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_provisional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_provisional_diagnosis"/>

                <TextView
                        android:id="@+id/tv_provisional"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_pathology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_pathology_invs_advice"/>

                <LinearLayout
                        android:id="@+id/ll_investigation_pathology"
                        style="@style/style_mdh_details"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#ededed"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_radiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_radiology_invs_advice"/>

                <LinearLayout
                        android:id="@+id/ll_investigation_radiology"
                        style="@style/style_mdh_details"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#ededed"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_medication"/>

                <com.noqapp.android.client.views.customviews.FixedHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_instruction"/>

                <TextView
                        android:id="@+id/tv_instruction"
                        style="@style/style_mdh_details"
                        android:text=""/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_followup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_follow_up"/>

                <TextView
                        android:id="@+id/tv_followup"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>