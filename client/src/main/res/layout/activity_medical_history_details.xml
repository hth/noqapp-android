<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99ffffff"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


            <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/white">

                <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="2dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="vertical"
                            android:padding="@dimen/list_item_margin">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="5dp"
                                    android:text="Patient Name: "
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"/>


                            <TextView
                                    android:id="@+id/tv_patient_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp"/>

                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/tv_business_category_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="5dp"
                                    android:text="Doctor Name: "
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"/>


                            <TextView
                                    android:id="@+id/tv_diagnosed_by"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp"/>

                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="Hospital Name: "
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"/>

                            <TextView
                                    android:id="@+id/tv_business_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/ll_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_chief_complaints"/>

                <TextView
                        android:id="@+id/tv_complaints"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_past_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_past_history"/>

                <TextView
                        android:id="@+id/tv_past_history"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_family_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_family_history"/>

                <TextView
                        android:id="@+id/tv_family_history"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_known_allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_known_allergies"/>

                <TextView
                        android:id="@+id/tv_known_allergy"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_physical_exam"/>

                <LinearLayout
                        android:id="@+id/ll_physical"
                        style="@style/style_mdh_details"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_clinical_finding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_clinical_findings"/>

                <TextView
                        android:id="@+id/tv_clinical_finding"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_provisional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_provisional_diagnosis"/>

                <TextView
                        android:id="@+id/tv_provisional"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_pathology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="Investigation Advised -> Pathology: "/>

                <LinearLayout
                        android:id="@+id/ll_investigation_pathology"
                        style="@style/style_mdh_details"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_radiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="Investigation Advised -> Radiology: "/>

                <LinearLayout
                        android:id="@+id/ll_investigation_radiology"
                        style="@style/style_mdh_details"
                        android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_medication"/>

                <com.noqapp.android.client.views.customviews.FixedHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_instruction"/>

                <TextView
                        android:id="@+id/tv_instruction"
                        style="@style/style_mdh_details"
                        android:text=""/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_followup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                <TextView
                        style="@style/style_mdh_header"
                        android:text="@string/mds_follow_up"/>

                <TextView
                        android:id="@+id/tv_followup"
                        style="@style/style_mdh_details"
                        android:text=""/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>