<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Chief Complaint: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Chief Complaint details " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Past History: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_past_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Past History details " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Family History: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_family_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Family History details " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Known Allergies: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_known_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Known Allergies details " />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_physical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Physical Examination: "
                    android:textStyle="bold" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight=".6"-->
                    <!--android:padding="5dp"-->
                    <!--android:text="Physical Examination details " />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Clinical Findings: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_clinical_finding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Clinical Findings details " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Provisional /Differential Diagnosis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_provisional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Provisional /Differential Diagnosis details " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Investigation Advised: "
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="Investigation Advised details " />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:padding="5dp"
                    android:text="Treatment Advice: "
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight=".6"-->
                <!--android:padding="5dp"-->
                <!--android:text="Physical Examination details " />-->

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>