<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv_q_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/survey_title_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">


                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:text="Not at all\nsatisfied"
                    android:textSize="@dimen/survey_subtitle_size"
                    android:textColor="@android:color/black" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:gravity="right"
                    android:text="Extremely\nSatisfied"
                    android:textSize="@dimen/survey_subtitle_size"
                    android:textColor="@android:color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_1"
                    style="@style/style_tv_rate"
                    android:tag="1"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_2"
                    style="@style/style_tv_rate"
                    android:tag="2"
                    android:text="2" />

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/style_tv_rate"
                    android:tag="3"
                    android:text="3" />

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/style_tv_rate"
                    android:tag="4"
                    android:text="4" />

                <TextView
                    android:id="@+id/tv_5"
                    style="@style/style_tv_rate"
                    android:tag="5"
                    android:text="5" />

                <TextView
                    android:id="@+id/tv_6"
                    style="@style/style_tv_rate"
                    android:tag="6"
                    android:text="6" />

                <TextView
                    android:id="@+id/tv_7"
                    style="@style/style_tv_rate"
                    android:tag="7"
                    android:text="7" />

                <TextView
                    android:id="@+id/tv_8"
                    style="@style/style_tv_rate"
                    android:tag="8"
                    android:text="8" />

                <TextView
                    android:id="@+id/tv_9"
                    style="@style/style_tv_rate"
                    android:tag="9"
                    android:text="9" />

                <TextView
                    android:id="@+id/tv_10"
                    style="@style/style_tv_rate"
                    android:tag="10"
                    android:text="10" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_q_yes_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/survey_title_size"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_yes_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:checked="true"
                    android:text="Yes"
                    android:textSize="@dimen/survey_subtitle_size"/>

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:text="No"
                    android:textSize="@dimen/survey_subtitle_size" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_q_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/survey_title_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_orange"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="3"
                android:padding="5dp"
                android:singleLine="false"
                android:textSize="@dimen/survey_title_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/survey_btn_height"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_bg_inactive"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:maxWidth="400dp"
                    android:text="RESET"
                    android:textAllCaps="true"
                    android:textColor="@color/btn_color"
                    android:textSize="@dimen/survey_btn_txt_size"
                    android:textStyle="normal" />


                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/survey_btn_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_bg_enable"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:maxWidth="400dp"
                    android:text="Submit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/survey_btn_txt_size"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>