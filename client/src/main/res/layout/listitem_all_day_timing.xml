<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <LinearLayout
                android:id="@+id/ll_day"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@color/button_disable"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="50dp"
                    android:layout_height="82dp"
                    android:text="xyz"
                    android:rotation="-90"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:textSize="@dimen/text_size_eighteen"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_day"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:padding="@dimen/list_item_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_token_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_weekly_hours_token"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_weekly_store"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_lunch_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_weekly_lunch"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_appointment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_weekly_hours_appointment"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_token_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve" />

                    <TextView
                        android:id="@+id/tv_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve" />

                    <TextView
                        android:id="@+id/tv_lunch_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve" />

                    <TextView
                        android:id="@+id/tv_appointment_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_twelve" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>