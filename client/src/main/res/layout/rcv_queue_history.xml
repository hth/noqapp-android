<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="10dp">

            <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_main"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        card_view:cardCornerRadius="5dp">

                    <ImageView
                            android:id="@+id/iv_main"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="3dp"
                            android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/tv_store_rating"
                        android:layout_toRightOf="@+id/cv_main"
                        android:orientation="vertical">


                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:textSize="@dimen/text_size_fourteen"
                            android:text="Navratna Vegetarian Resturant"/>

                    <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp"
                            android:text="CBD Belapur, Navi Mumbai"
                            android:textSize="@dimen/text_size_twelve"/>


                </LinearLayout>


            </RelativeLayout>

            <View
                    android:id="@+id/view_seprator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@+id/rl_top"
                    android:background="@android:color/darker_gray"/>

            <TextView
                    android:id="@+id/tv_store_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_seprator"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Queue join date - 28-09-2019 09:56 PM"
                    android:textSize="@dimen/text_size_twelve"/>

            <TextView
                    android:id="@+id/tv_store_special1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_store_special"
                    android:text="Token number - 157842369"
                    android:textSize="@dimen/text_size_twelve"/>

            <View
                    android:id="@+id/view_seprator1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@+id/tv_store_special1"
                    android:background="@android:color/darker_gray"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height=
                            "wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/view_seprator1"
                    android:weightSum="1">

                <TextView
                        android:id="@+id/tv_store_special12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Status - Served"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_fourteen"/>

                <TextView
                        android:id="@+id/tv_store_special123"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Rating - 4.5"
                        android:gravity="right"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_fourteen"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


