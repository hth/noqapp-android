<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/action_bar_height"
                                   android:background="#fefefe"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   app:contentInsetStartWithNavigation="0dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/rl_right"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:maxLines="1"
                android:minLines="1"
                android:ellipsize="end"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/map_icon"
                android:gravity="center_vertical"
                android:text="Mumbai"
                android:textColor="#000000"
                android:textSize="@dimen/toolbar_text_size"
                android:textStyle="bold"/>

        <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@+id/fl_notification"
                    android:background="@drawable/ic_search"
                    android:padding="12dp"
                    android:backgroundTint="@color/theme_color_red"
                    android:visibility="gone"/>

            <FrameLayout
                    android:id="@+id/fl_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:clipToPadding="false"
                    android:focusable="true"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_notification"
                        android:backgroundTint="@color/theme_color_red"
                        android:padding="12dp"/>

                <TextView
                        android:id="@+id/tv_badge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/badge_bg"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"/>

            </FrameLayout>

            <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="@dimen/action_bar_icon_size"
                    android:layout_height="@dimen/action_bar_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_home"
                    android:clipToPadding="false"
                    android:focusable="true"
                    android:backgroundTint="@color/theme_color_red"
                    android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>