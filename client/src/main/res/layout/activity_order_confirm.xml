<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99ffffff"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

            <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">


                <TextView
                        android:id="@+id/tv_serving_no"
                        style="@style/style_join_queue_tv"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                <TextView
                        style="@style/style_join_queue_tv"
                        android:gravity="center"
                        android:text="@string/serving_now"
                        android:textColor="@color/colorAddress"
                        android:textSize="@dimen/text_size_fourteen"/>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                <TextView
                        android:id="@+id/tv_token"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_corner_business"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="22sp"/>

                <TextView
                        style="@style/style_join_queue_tv"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/your_token"
                        android:textSize="@dimen/text_size_fourteen"/>
            </LinearLayout>

            <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                <TextView
                        android:id="@+id/tv_estimated_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                <TextView
                        style="@style/style_join_queue_tv"
                        android:text="@string/will_be_served"
                        android:textColor="@color/colorAddress"
                        android:textSize="@dimen/text_size_twelve"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/color_invite_details"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="@string/order_details"
                    android:textSize="@dimen/store_info"/>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:text="@string/total_amount"
                    android:textSize="@dimen/store_info"/>

            <TextView
                    android:id="@+id/tv_total_order_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textSize="@dimen/store_info"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:text="@string/total_tax"
                    android:textSize="@dimen/store_info"/>

            <TextView
                    android:id="@+id/tv_tax_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textSize="@dimen/store_info"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:text="@string/payment_due"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_fourteen"/>

            <TextView
                    android:id="@+id/tv_due_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_fourteen"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/tv_store_name"
                style="@style/style_join_queue_tv"
                android:background="@color/color_invite_details"
                android:padding="10dp"
                android:textColor="@color/colorAddress"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_sixteen"/>

        <TextView
                android:id="@+id/tv_address"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:background="@color/color_invite_details"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorAddress"
                android:textSize="@dimen/text_size_fourteen"/>

    </LinearLayout>
</LinearLayout>









