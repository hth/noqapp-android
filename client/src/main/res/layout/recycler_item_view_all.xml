<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_main"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    card_view:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/iv_main"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/tv_store_rating"
                    android:layout_toRightOf="@+id/cv_main"
                    android:orientation="vertical">


                    <com.noqapp.android.client.views.customviews.TextViewRalewayBold
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp" />


                    <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                        android:id="@+id/tv_category_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp" />

                    <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

                <include
                    android:id="@+id/tv_store_rating"
                    layout="@layout/rating_textview" />

                <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                    android:id="@+id/tv_store_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_store_rating"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:textSize="12sp" />
            </RelativeLayout>


            <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                android:id="@+id/tv_store_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:text=""
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


