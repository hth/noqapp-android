<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:orientation="horizontal"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_right">

            <TextView
                android:id="@+id/tv_cat"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_cat"
                android:text=""
                android:textSize="@dimen/text_size_fourteen" />

            <TextView
                android:id="@+id/tv_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_cat"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textSize="@dimen/text_size_ten" />


            <LinearLayout
                android:id="@+id/ll_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_details"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_twelve" />

                <TextView
                    android:id="@+id/tv_discounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_twelve" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_mid"
                android:paddingLeft="5dp"
                android:text="status"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:textSize="@dimen/text_size_fourteen" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp" />


            <TextView
                android:id="@+id/tv_sold_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Sold Out"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_sixteen"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/ll_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/green_round_corner"
                    android:text="-"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/text_size_sixteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/text_size_sixteen" />

                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/green_round_corner"
                    android:text="+"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/text_size_sixteen"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/view_disable"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#80cccccc"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />
</FrameLayout>