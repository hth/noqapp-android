<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="165dp"
              android:layout_height="175dp"
              android:orientation="vertical"
              android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/card_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardCornerRadius="3dp"
                                        card_view:cardElevation="2dp"
                                        card_view:cardUseCompatPadding="true">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5">

                <ImageView
                        android:id="@+id/iv_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/black_transparent"
                        android:gravity="center_vertical"
                        android:padding="5dp">

                    <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="2.9"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_twelve"
                            android:textColor="@color/theme_aqua"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_distance"
                            android:paddingLeft="5dp"
                            android:text="km"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_ten"
                            android:textColor="@color/theme_aqua"/>


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="away from you"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_ten"
                            android:textColor="@android:color/white"/>
                </RelativeLayout>
            </FrameLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_fourteen"/>


                <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text_header_color"
                        android:textSize="@dimen/text_size_ten"/>

                <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=""
                        android:textColor="@color/text_header_color"
                        android:textSize="@dimen/text_size_ten"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/tv_store_rating"
                            android:text=""
                            android:textColor="#80000000"
                            android:textSize="@dimen/text_size_twelve"/>

                    <TextView
                            android:id="@+id/tv_store_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="0.0"
                            android:drawableLeft="@mipmap/star_fill"
                            android:layout_alignParentRight="true"
                            android:drawablePadding="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/rating_text_size"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


