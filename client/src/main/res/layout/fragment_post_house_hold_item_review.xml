<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_rent_per_month_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_house_hold_item_price"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_corner_theme"
                android:drawableEnd="@drawable/ic_marketplace_edit"
                android:drawablePadding="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/txt_edit"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_rent_per_month_label" />

            <TextView
                android:id="@+id/tv_rent_per_month"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_rent_per_month_label"
                tools:text="2345" />

            <TextView
                android:id="@+id/tv_rental_type_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_house_hold_item_usages"
                app:layout_constraintTop_toBottomOf="@id/tv_rent_per_month" />

            <TextView
                android:id="@+id/tv_rental_type"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_rental_type_label"
                tools:text="House" />

            <TextView
                android:id="@+id/tv_rental_address_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_address"
                app:layout_constraintTop_toBottomOf="@id/tv_rental_type" />

            <TextView
                android:id="@+id/tv_rental_address"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_rental_address_label"
                tools:text="House" />

            <TextView
                android:id="@+id/tv_city_area_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_area_city"
                app:layout_constraintTop_toBottomOf="@id/tv_rental_address" />

            <TextView
                android:id="@+id/tv_city_area"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_city_area_label"
                tools:text="House" />

            <TextView
                android:id="@+id/tv_town_locality_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_town_locality_sector"
                app:layout_constraintTop_toBottomOf="@id/tv_city_area" />

            <TextView
                android:id="@+id/tv_town_locality"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_town_locality_label"
                tools:text="House" />

            <TextView
                android:id="@+id/tv_landmark_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_landmark"
                app:layout_constraintTop_toBottomOf="@id/tv_town_locality" />

            <TextView
                android:id="@+id/tv_landmark"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_faded"
                app:layout_constraintTop_toBottomOf="@id/tv_landmark_label"
                tools:text="House" />

            <View
                android:id="@+id/view_address"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/color_divider"
                app:layout_constraintTop_toBottomOf="@id/tv_landmark"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/tv_images_label"
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_images"
                app:layout_constraintTop_toBottomOf="@id/view_address" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selected_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_images_label" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/rv_selected_images">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_enable">

                    <TextView
                        android:id="@+id/tv_proceed"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:drawableStart="@drawable/ic_market_place_arrow_next"
                        android:drawablePadding="24dp"
                        android:gravity="center"
                        android:text="@string/txt_review_and_proceed"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_post_household_progress_data"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintTop_toBottomOf="@id/progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>