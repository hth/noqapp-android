<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:src="@drawable/cheese_4" />


        <com.noqapp.android.client.views.customviews.TextViewRalewayBold
            android:id="@+id/tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:maxLines="2"
            android:text="Navratna"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
            android:id="@+id/tv_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_store_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text="Seawood, Navi Mumbai"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/store_info" />

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_place_order"
            android:layout_below="@+id/tv_store_address"
            android:childDivider="@android:color/transparent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:groupIndicator="@null"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_header"
            android:layout_width="match_parent"
            android:layout_below="@+id/expandableListView"
            android:background="@color/colorActionbar"
            android:layout_height="50dp"
            android:paddingBottom="1dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_place_order"
            android:layout_below="@+id/rcv_header"/>

        <TextView
            android:id="@+id/tv_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/order_arrow"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>









