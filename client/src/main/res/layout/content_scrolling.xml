<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       app:layout_behavior="@string/appbar_scrolling_view_behavior"

                                       tools:showIn="@layout/activity_feed">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">


        <!--<ImageView-->
                <!--android:id="@+id/iv_bg"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="fitXY"-->
                <!--android:maxHeight="250dp"-->
                <!--android:layout_margin="10dp"/>-->

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

        <View
                android:id="@+id/view_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/color_separator"/>

        <RelativeLayout
                android:id="@+id/rl_author"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

            <com.noqapp.android.common.customviews.CircularImageView
                    android:id="@+id/iv_main"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:elevation="5dp"
                    android:scaleType="centerCrop" />

            <LinearLayout
                    android:id="@+id/ll_side"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_main"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                <TextView
                        android:id="@+id/tv_author_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_sixteen"/>

                <TextView
                        android:id="@+id/tv_author_profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textSize="@dimen/text_size_twelve"/>


            </LinearLayout>

        </RelativeLayout>


        <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:lineSpacingExtra="5dp"
                android:textSize="16sp"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>
