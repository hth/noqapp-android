<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5">

                    <ImageView
                        android:id="@+id/iv_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <include layout="@layout/rating_textview" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/black_transparent"
                        android:padding="5dp">

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="2.9 km"
                            android:textColor="@android:color/white" />

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="away from you"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_store_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:tint="@color/colorAccent" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_store_icon"
                        android:orientation="vertical">

                        <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />


                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textSize="12sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textSize="12sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ll_left"
                android:orientation="vertical"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/strut"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/color_separator" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignRight="@id/strut"
                            android:gravity="center">

                            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                                android:id="@+id/tv_current"
                                style="@style/style_join_queue_tv"
                                android:text="@string/your_token"
                                android:textColor="@color/colorAddress"
                                android:textSize="14sp" />

                            <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                                android:id="@+id/tv_current_value"
                                style="@style/style_join_queue_tv"
                                android:layout_below="@+id/tv_current"
                                android:textColor="@color/colorMobile"
                                android:textSize="28sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@id/strut"
                            android:layout_alignParentRight="true"
                            android:gravity="center">

                            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                                android:id="@+id/tv_total"
                                style="@style/style_join_queue_tv"
                                android:text="@string/serving_now"
                                android:textColor="@color/colorAddress"
                                android:textSize="14sp" />

                            <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                                android:id="@+id/tv_total_value"
                                style="@style/style_join_queue_tv"
                                android:layout_below="@+id/tv_total"
                                android:textColor="@color/color_total_val"
                                android:textSize="28sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/color_separator" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".50"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_change_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_bg_drawable"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_after"
                            style="@style/style_join_queue_tv"
                            android:text="@string/you_are_after"
                            android:textColor="@color/colorActionbar"
                            android:textSize="14sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_how_long"
                            style="@style/style_join_queue_tv"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorActionbar"
                            android:textSize="28sp" />

                        <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                            android:id="@+id/tv_estimated_time"
                            style="@style/style_join_queue_tv"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


