<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical">

                <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                    android:id="@+id/tv_serving_no"
                    style="@style/style_join_queue_tv"
                    android:gravity="center"
                    android:textColor="@color/color_total_val"
                    android:textSize="36sp" />

                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    style="@style/style_join_queue_tv"
                    android:gravity="center"
                    android:text="@string/currently_serving"
                    android:textColor="@color/colorAddress"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical">

                <com.noqapp.android.client.views.customviews.TextViewRobotoLight
                    android:id="@+id/tv_people_in_q"
                    style="@style/style_join_queue_tv"
                    android:gravity="center"
                    android:textColor="@color/colorMobile"
                    android:textSize="36sp" />

                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    style="@style/style_join_queue_tv"
                    android:gravity="center"
                    android:text="@string/people_in_queue"
                    android:textColor="@color/colorAddress"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/color_invite_details"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    android:id="@+id/add_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:text="Patient Name"
                    android:textColor="@color/colorAddress"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_name_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".37" />

                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    android:id="@+id/tv_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:text="Add Dependent"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white" />

            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Queue Details"
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />

            <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                android:id="@+id/tv_queue_name"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                android:id="@+id/tv_hour_saved"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />

            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                android:id="@+id/tv_mobile"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorMobile"
                android:textSize="18sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize=".5" />

                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ratingBar"
                    android:text="   give some space   "
                    android:textColor="@color/colorAddress"
                    android:textSize="18sp"
                    android:visibility="invisible" />


                <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                    android:id="@+id/tv_rating_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_rating"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/colorAddress"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white" />

            <com.noqapp.android.client.views.customviews.TextViewRobotoRegular
                android:id="@+id/tv_store_name"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorAddress"
                android:textSize="20sp" />


            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                android:id="@+id/tv_address"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorAddress"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <com.noqapp.android.client.views.customviews.TextViewRalewayRegular
                android:id="@+id/tv_skip_msg"
                style="@style/style_join_queue_tv"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="You were skiped. \nPress yes to join the queue again."
                android:textColor="@color/colorAddress"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_skip_msg"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.noqapp.android.client.views.customviews.ButtonRalewayRegular
                    android:id="@+id/btn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_drawable"
                    android:drawableLeft="@mipmap/join_button"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="@string/no"
                    android:textColor="@color/colorMobile"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <com.noqapp.android.client.views.customviews.ButtonRalewayRegular
                    android:id="@+id/btn_joinQueue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_drawable"
                    android:drawableLeft="@mipmap/join_button"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="@string/join"
                    android:textAllCaps="false"
                    android:textColor="@color/colorMobile"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
