<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="10dp"
              android:layout_height="match_parent"
              android:weightSum="1">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2">

                <ImageView
                        android:id="@+id/ad_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/presentation_detail_description_title"
                        />

                <TextView
                        android:id="@+id/ad_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/ad_image"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="@color/colorAddress"
                        android:textStyle="bold"
                        android:textSize="34sp"/>


                <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/ad_title"
                        android:maxLines="1"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:layout_alignBaseline="@+id/ad_title"
                        android:text=""
                        android:textColor="@color/colorAddress"
                        android:textStyle="bold"
                        android:textSize="18sp"/>


                <TextView
                        android:id="@+id/tv_timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/ad_image"
                        android:layout_below="@+id/ad_title"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="16sp"/>
            </RelativeLayout>


            <LinearLayout
                    android:id="@+id/ll_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".8"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/white"
                    android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_no_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/ad_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:layout_above="@+id/ad_title1"
                        android:contentDescription="@string/presentation_detail_description_title"
                        />

                <TextView
                        android:id="@+id/ad_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_above="@+id/tv_degree1"
                        android:textColor="@color/colorAddress"
                        android:textStyle="bold"
                        android:textSize="34sp"/>


                <TextView
                        android:id="@+id/tv_degree1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:layout_above="@+id/tv_timing1"
                        android:text=""
                        android:textColor="@color/colorAddress"
                        android:textStyle="bold"
                        android:textSize="18sp"/>


                <TextView
                        android:id="@+id/tv_timing1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_above="@+id/tv_info"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="18sp"
                        android:text="SSD is now online. Book you appointment via NOQAPP. Install app from android playstore."
                        android:background="@android:color/white"
                        android:orientation="vertical"/>
            </RelativeLayout>


        </LinearLayout>


    </FrameLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/black"
            android:layout_weight=".1">


        <ImageView
                android:id="@+id/iv_banner1"
                android:layout_width="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:scaleType="center"
                android:background="@drawable/powered_by"
                android:layout_height="match_parent"/>

    </RelativeLayout>
</LinearLayout>