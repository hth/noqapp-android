<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/btn_update">

        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_chief_complaints"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_complaints"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="2"
                    android:text=""/>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_past_history"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_past_history"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="2"
                    android:text=""/>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_family_history"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_family_history"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="2"
                    android:text=""/>


            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_known_allergies"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_known_allergy"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="2"
                    android:text=""/>


            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_physical_exam"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="@string/pe_pulse"
                            android:textSize="@dimen/text_size_ten"/>

                    <EditText
                            android:id="@+id/edt_pulse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_white_bg_drawable"
                            android:inputType="numberSigned"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/text_size_twelve"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".2"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="@string/pe_bp"
                            android:textSize="@dimen/text_size_ten"/>

                    <EditText
                            android:id="@+id/edt_bp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_white_bg_drawable"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/text_size_twelve"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="@string/pe_weight"
                            android:textSize="@dimen/text_size_ten"/>

                    <EditText
                            android:id="@+id/edt_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_white_bg_drawable"
                            android:inputType="numberSigned"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/text_size_twelve"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="@string/pe_temperature"
                            android:textSize="@dimen/text_size_ten"/>

                    <EditText
                            android:id="@+id/edt_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_white_bg_drawable"
                            android:inputType="numberSigned"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/text_size_twelve"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="@string/pe_oxygen"
                            android:textSize="@dimen/text_size_ten"/>

                    <EditText
                            android:id="@+id/edt_oxygen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_white_bg_drawable"
                            android:inputType="numberSigned"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/text_size_twelve"/>

                </LinearLayout>
            </LinearLayout>


            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_clinical_findings"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_clinical_finding"
                    style="@style/style_mdh_details"
                    android:layout_marginBottom="10dp"
                    android:text=""/>


            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_provisional_diagnosis"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_provisional"
                    style="@style/style_mdh_details"
                    android:layout_marginBottom="10dp"
                    android:text=""/>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_investigation_advice"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_investigation"
                    style="@style/style_mdh_details"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:text=""/>


            <TextView
                    style="@style/style_mdh_header"
                    android:text="Radiology"/>

            <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                    android:id="@+id/lv_radiology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/square_border"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <AutoCompleteTextView
                        android:id="@+id/actv_radiology"
                        android:layout_width="match_parent"
                        android:background="@drawable/square_white_bg_drawable"
                        android:hint="Search radiology tests"
                        android:padding="5dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_twelve"
                        android:layout_toLeftOf="@+id/iv_add_radiology"/>

                <ImageView
                        android:id="@+id/iv_add_radiology"
                        android:layout_width="@dimen/action_image_size"
                        android:layout_height="@dimen/action_image_size"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/add_medic"/>

            </RelativeLayout>

            <com.noqapp.android.merchant.views.customviews.FixedHeightGridView
                    android:id="@+id/gv_blood1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:numColumns="3"/>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="Pathology"/>

            <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                    android:id="@+id/lv_pathology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/square_border"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <AutoCompleteTextView
                        android:id="@+id/actv_pathology"
                        android:layout_width="match_parent"
                        android:background="@drawable/square_white_bg_drawable"
                        android:hint="Search pathology tests"
                        android:layout_alignParentLeft="true"
                        android:padding="5dp"
                        android:layout_toLeftOf="@+id/iv_add_pathology"
                        android:layout_height="40dp"
                        android:textSize="@dimen/text_size_twelve"/>

                <ImageView
                        android:id="@+id/iv_add_pathology"
                        android:layout_width="@dimen/action_image_size"
                        android:layout_height="@dimen/action_image_size"
                        android:layout_margin="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/add_medic"/>

            </RelativeLayout>


            <com.noqapp.android.merchant.views.customviews.FixedHeightGridView
                    android:id="@+id/gv_blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:numColumns="3"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        style="@style/style_mdh_header"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/mds_medication"/>

                <TextView
                        android:id="@+id/tv_assist"
                        style="@style/style_mdh_header"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/arrow_up"
                        android:text="@string/mds_assist"/>


            </RelativeLayout>


            <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="4dp">

                <LinearLayout
                        android:id="@+id/ll_fav_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                            android:id="@+id/listview_favroite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:listSelector="@android:color/transparent"
                            android:divider="@null"/>

                    <TextView
                            android:id="@+id/tv_favourite_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/text_size_twelve"
                            android:text="@string/favourite_text"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:divider="@null"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                <AutoCompleteTextView
                        android:id="@+id/actv_medicine_type"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_weight=".25"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:hint="@string/medicine_type"
                        android:background="@drawable/spinner_border"
                        android:padding="5dp"
                        android:textSize="@dimen/text_size_twelve"/>

                <AutoCompleteTextView
                        android:id="@+id/actv_medicine_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_weight=".5"
                        android:background="@drawable/spinner_border"
                        android:hint="@string/medicine_name"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:textSize="@dimen/text_size_twelve"/>

                <AutoCompleteTextView
                        android:id="@+id/actv_dose"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_weight=".25"
                        android:background="@drawable/spinner_border"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:hint="@string/dose_prompt"
                        android:textSize="@dimen/text_size_twelve"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_medicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">


                <AutoCompleteTextView
                        android:id="@+id/actv_frequency"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".33"
                        android:background="@drawable/spinner_border"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:hint="@string/frequency_prompt"
                        android:textSize="@dimen/text_size_twelve"/>

                <AutoCompleteTextView
                        android:id="@+id/actv_dose_timing"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".33"
                        android:background="@drawable/spinner_border"
                        android:hint="@string/dose_timing"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:textSize="@dimen/text_size_twelve"/>

                <AutoCompleteTextView
                        android:id="@+id/actv_course"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".33"
                        android:maxLines="1"
                        android:minLines="1"
                        android:inputType="textCapSentences"
                        android:background="@drawable/spinner_border"
                        android:padding="5dp"
                        android:hint="@string/course_prompt"
                        android:textSize="@dimen/text_size_twelve"/>


                <Button
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/action_image_size"
                        android:layout_height="@dimen/action_image_size"
                        android:layout_margin="5dp"
                        android:background="@drawable/add_medic"
                        android:padding="5dp"
                        android:textColor="@android:color/transparent"
                        android:textSize="@dimen/text_size_twelve"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                <TextView
                        style="@style/style_mdh_header"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="@string/mds_preferred_pharmacy"/>

                <Spinner
                        android:id="@+id/sp_preferred_list"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="35dp"
                        android:background="@drawable/sp_background"/>
            </LinearLayout>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_instruction"/>

            <AutoCompleteTextView
                    android:id="@+id/actv_instruction"
                    style="@style/style_mdh_details"
                    android:layout_marginBottom="10dp"
                    android:text=""/>

            <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_follow_up"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <AutoCompleteTextView
                        android:id="@+id/actv_followup"
                        style="@style/style_mdh_details"
                        android:layout_width="150dp"
                        android:layout_marginRight="10dp"
                        android:digits="0123456789"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:text=""/>

                <RadioGroup
                        android:id="@+id/rg_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                    <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:layout_marginRight="10dp"
                            android:textSize="@dimen/text_size_twelve"
                            android:text="@string/days"
                            app:buttonTint="@color/colorAccent"/>

                    <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_months"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:textSize="@dimen/text_size_twelve"
                            android:text="@string/month"
                            app:buttonTint="@color/colorAccent"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/button_drawable"
            android:text="@string/update_medical_history"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_fourteen"/>
</RelativeLayout>


