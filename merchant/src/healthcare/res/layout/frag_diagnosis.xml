<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Examination"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.5dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    style="@style/style_mdh_header"
                    android:text="Examination Results" />

                <AutoCompleteTextView
                    android:id="@+id/actv_examination_results"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="5"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    style="@style/style_mdh_header"
                    android:text="@string/mds_clinical_findings" />

                <AutoCompleteTextView
                    android:id="@+id/actv_clinical_findings"
                    style="@style/style_mdh_details"
                    android:gravity="top"
                    android:minLines="5"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search_dia"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_search"
                    android:backgroundTint="@color/colorAccent" />

                <AutoCompleteTextView
                    android:id="@+id/actv_search_provisional_dia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_clear_actv_dia"
                    android:layout_toRightOf="@+id/iv_search_dia"
                    android:background="@android:color/transparent"
                    android:drawablePadding="10dp"
                    android:hint="Search Diagnosis"
                    android:maxLines="1"
                    android:minWidth="200dp"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="@dimen/text_size_fourteen" />

                <ImageView
                    android:id="@+id/iv_clear_actv_dia"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_cancel"
                    android:backgroundTint="@color/colorAccent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_add_provisional_diagnosis"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Provisional Diagnosis"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_add_provisional_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_add_round"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Add New"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_provisional_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </LinearLayout>


</LinearLayout>