<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ScrollView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Examination"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                    <TextView
                            style="@style/style_mdh_header"
                            android:text="Examination Results"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_examination_results"
                            style="@style/style_mdh_details"
                            android:gravity="top"
                            android:minLines="5"
                            android:text=""/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                    <TextView
                            style="@style/style_mdh_header"
                            android:text="@string/mds_clinical_findings"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_clinical_findings"
                            style="@style/style_mdh_details"
                            android:gravity="top"
                            android:minLines="5"
                            android:text=""/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <View
            android:background="#80000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Provisional Diagnosis"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_add_provisional_diagnosis"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_add_provisional_diagnosis"
                        android:text="Add New"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_add_round"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_provisional_diagnosis"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>