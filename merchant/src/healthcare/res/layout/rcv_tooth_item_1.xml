<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/iv_front"
            android:layout_width="@dimen/front_tooth_width_chart"
            android:layout_height="@dimen/front_tooth_height_chart"
            android:scaleType="fitCenter"
            android:background="@drawable/tooth_11" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="@dimen/top_tooth_size_chart"
            android:layout_height="@dimen/top_tooth_size_chart"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            android:background="@drawable/tooth_o_left_center" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/top_tooth_size_chart"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="12"
            android:textColor="#333"
            android:textSize="@dimen/tooth_text_size"
            android:textStyle="normal" />


    </LinearLayout>

    <View
        android:id="@+id/bottom_sep"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/dental_seprator"
        android:minWidth="50dp" />

</LinearLayout>