<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99ffffff"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:weightSum="1">

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="match_parent">


                <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/edt_roun_rect"
                        android:layout_height="match_parent"/>

                <ImageView
                        android:id="@+id/iv_delete_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/delete_record"/>

                <ImageView
                        android:id="@+id/iv_inlarge_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/enlarge"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/edt_roun_rect"
                        android:layout_height="match_parent"/>

                <ImageView
                        android:id="@+id/iv_delete_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/delete_record"/>

                <ImageView
                        android:id="@+id/iv_inlarge_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/enlarge"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/edt_roun_rect"
                        android:layout_height="match_parent"/>

                <ImageView
                        android:id="@+id/iv_delete_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/delete_record"/>

                <ImageView
                        android:id="@+id/iv_inlarge_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left|top"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/enlarge"/>
            </FrameLayout>


        </LinearLayout>

        <FrameLayout
                android:id="@+id/frame_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:visibility="gone">


            <!--<android.support.v7.widget.CardView-->
            <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/cardview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:padding="10dp"-->
            <!--android:layout_margin="20dp"-->
            <!--card_view:cardBackgroundColor="@android:color/white"-->
            <!--card_view:cardCornerRadius="10dp"-->
            <!--card_view:cardElevation="2dp"-->
            <!--card_view:cardUseCompatPadding="true">-->

            <com.noqapp.android.merchant.views.customviews.TouchImageView
                    android:id="@+id/iv_large"
                    android:layout_width="match_parent"
                    android:layout_margin="30dp"

                    android:layout_height="match_parent"/>
            <!--</android.support.v7.widget.CardView>-->

            <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/close_black"
                    android:layout_gravity="right|top"
                    android:layout_margin="50dp"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>