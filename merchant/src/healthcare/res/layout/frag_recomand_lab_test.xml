<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ScrollView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Radiology"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_add_new"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_add_new"
                        android:text="Add New"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_add_round"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="MRI"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_mri"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="SCAN"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_scan"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="SONO"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_sono"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="X-RAY"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_xray"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <View
            android:background="#80000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Pathology"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_add_dia"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_add_dia"
                    android:text="Add New"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_add_round"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_pathology"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>