<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
                android:fromDegrees="120"
                android:toDegrees="120"
                android:pivotX="50%"
                android:pivotY="50%" >
            <shape
                    android:shape="line"
                    android:top="1dip" >
                <stroke
                        android:width="4dip"
                        android:color="#000000" />
            </shape>
        </rotate>
    </item>
</selector>