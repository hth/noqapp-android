<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_save_upload"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/ll_canvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Upper Left"
                            android:textColor="#333"
                            android:textSize="@dimen/text_size_sixteen"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_1"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_2"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_3"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_4"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_5"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_6"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_7"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_8"
                                style="@style/style_dental" />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/holo_orange_light"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Upper Right"
                            android:textColor="#333"
                            android:textSize="@dimen/text_size_sixteen"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_9"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_10"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_11"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_12"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_13"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_14"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_15"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_16"
                                style="@style/style_dental" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_orange_light"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Lower Left"
                            android:textColor="#333"
                            android:textSize="@dimen/text_size_sixteen"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_17"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_18"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_19"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_20"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_21"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_22"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_23"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_24"
                                style="@style/style_dental" />

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/holo_orange_light"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Lower Left"
                            android:textColor="#333"
                            android:textSize="@dimen/text_size_sixteen"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_25"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_26"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_27"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_28"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_29"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_30"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_31"
                                style="@style/style_dental" />

                            <ImageView
                                android:id="@+id/iv_32"
                                style="@style/style_dental" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_save_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_gradient_round"
            android:gravity="center"
            android:padding="10dp"
            android:text="Save &amp; Upload"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_fourteen" />
    </RelativeLayout>
</LinearLayout>