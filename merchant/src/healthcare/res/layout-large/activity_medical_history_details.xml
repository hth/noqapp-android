<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f2f2"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_update"
                android:layout_alignParentTop="true"
                android:overScrollMode="never">

            <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2.5dp"
                            android:layout_weight=".5"
                            android:orientation="vertical">

                        <TextView
                                style="@style/style_mdh_header"
                                android:text="Chief Complaint: "/>

                        <AutoCompleteTextView
                                android:id="@+id/actv_complaints"
                                style="@style/style_mdh_details"
                                android:gravity="top"
                                android:minLines="5"
                                android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight=".5"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                            <TextView
                                    style="@style/style_mdh_header"
                                    android:text="Past History: "/>

                            <AutoCompleteTextView
                                    android:id="@+id/actv_past_history"
                                    style="@style/style_mdh_details"
                                    android:gravity="top"
                                    android:minLines="5"
                                    android:text=""/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2.5dp"
                            android:layout_weight=".5"
                            android:orientation="vertical">

                        <TextView
                                style="@style/style_mdh_header"
                                android:text="Family History: "/>

                        <AutoCompleteTextView
                                android:id="@+id/actv_family_history"
                                style="@style/style_mdh_details"
                                android:gravity="top"
                                android:minLines="5"
                                android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight=".5"
                            android:orientation="vertical">

                        <TextView
                                style="@style/style_mdh_header"
                                android:text="Known Allergies: "/>

                        <AutoCompleteTextView
                                android:id="@+id/actv_known_allergy"
                                style="@style/style_mdh_details"
                                android:gravity="top"
                                android:minLines="5"
                                android:text=""/>
                    </LinearLayout>


                </LinearLayout>


                <TextView
                        style="@style/style_mdh_header"
                        android:text="Physical Examination: "/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:padding="5dp"
                                android:text="Pulse"
                                android:textSize="15sp"/>

                        <EditText
                                android:id="@+id/edt_pulse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_white_bg_drawable"
                                android:inputType="numberSigned"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".34"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:padding="5dp"
                                android:text="B.P (Blood Pressure)"
                                android:textSize="15sp"/>

                        <EditText
                                android:id="@+id/edt_bp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_white_bg_drawable"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:text=""/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:padding="5dp"
                                android:text="Weight(Kg)"
                                android:textSize="15sp"/>

                        <EditText
                                android:id="@+id/edt_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_white_bg_drawable"
                                android:inputType="numberSigned"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:text=""/>

                    </LinearLayout>


                </LinearLayout>


                <TextView
                        style="@style/style_mdh_header"
                        android:text="Clinical Findings: "/>

                <AutoCompleteTextView
                        android:id="@+id/actv_clinical_finding"
                        style="@style/style_mdh_details"
                        android:layout_marginBottom="10dp"
                        android:text=""/>


                <TextView
                        style="@style/style_mdh_header"
                        android:text="Provisional /Differential Diagnosis"/>

                <AutoCompleteTextView
                        android:id="@+id/actv_provisional"
                        style="@style/style_mdh_details"
                        android:layout_marginBottom="10dp"
                        android:text=""/>

                <TextView
                        style="@style/style_mdh_header"
                        android:text="Investigation Advised: "/>

                <AutoCompleteTextView
                        android:id="@+id/actv_investigation"
                        style="@style/style_mdh_details"
                        android:layout_marginBottom="10dp"
                        android:text=""/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            style="@style/style_mdh_header"
                            android:layout_width="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Medication: "/>

                    <TextView
                            android:id="@+id/tv_assist"
                            style="@style/style_mdh_header"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/arrow_up"
                            android:text="Assist"/>


                </RelativeLayout>


                <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="4dp">

                    <LinearLayout
                            android:id="@+id/ll_fav_medicines"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:orientation="vertical">

                        <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                                android:id="@+id/listview_favroite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:listSelector="@android:color/transparent"
                                android:divider="@null"/>

                        <TextView
                                android:id="@+id/tv_favourite_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/favourite_text"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <com.noqapp.android.merchant.views.customviews.FixedHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@android:color/transparent"
                        android:divider="@null"/>

                <LinearLayout
                        android:id="@+id/ll_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:weightSum="1">

                    <AutoCompleteTextView
                            android:id="@+id/actv_medicine_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".15"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:hint="@string/medicine_type"
                            android:background="@drawable/spinner_border"
                            android:padding="10dp"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_medicine_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".25"
                            android:background="@drawable/spinner_border"
                            android:hint="@string/medicine_name"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:padding="10dp"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_dose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".15"
                            android:background="@drawable/spinner_border"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:padding="10dp"
                            android:hint="@string/dose_prompt"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_frequency"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".15"
                            android:background="@drawable/spinner_border"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:hint="@string/frequency_prompt"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_dose_timing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".15"
                            android:background="@drawable/spinner_border"
                            android:hint="@string/dose_timing"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:padding="10dp"/>

                    <AutoCompleteTextView
                            android:id="@+id/actv_course"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".15"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textCapSentences"
                            android:background="@drawable/spinner_border"
                            android:padding="10dp"
                            android:hint="@string/course_prompt"/>


                    <Button
                            android:id="@+id/tv_add"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/add_medic"
                            android:padding="10dp"
                            android:textColor="@android:color/transparent"/>

                </LinearLayout>


                <TextView
                        style="@style/style_mdh_header"
                        android:text="Instruction/Plan to patient: "/>

                <AutoCompleteTextView
                        android:id="@+id/actv_instruction"
                        style="@style/style_mdh_details"
                        android:layout_marginBottom="10dp"
                        android:text=""/>

                <TextView
                        style="@style/style_mdh_header"
                        android:text="Follow up: "/>

                <AutoCompleteTextView
                        android:id="@+id/actv_followup"
                        style="@style/style_mdh_details"
                        android:layout_marginBottom="10dp"
                        android:text=""/>
            </LinearLayout>
        </ScrollView>

        <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="300dp"
                android:layout_marginRight="300dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_drawable"
                android:text="@string/update_medical_history"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>
    </RelativeLayout>


</LinearLayout>