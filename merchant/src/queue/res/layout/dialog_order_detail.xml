<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_action_bar">

        <ImageView
                android:id="@+id/actionbarBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cross"
                android:padding="10dp"/>


        <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/order_details"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

    </RelativeLayout>


    <ScrollView
            android:layout_width="match_parent"
            android:background="@drawable/order_screen_bg"
            android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:card_view="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="20dp"
                      android:paddingBottom="25dp">


            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_item_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_sixteen"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:padding="10dp"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginBottom="10dp"/>

                    <com.noqapp.android.merchant.utils.FixedHeightListView
                            android:id="@+id/listview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:layout_marginBottom="5dp"
                            android:fadeScrollbars="false"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_notes"
                    android:layout_marginTop="3dp"
                    card_view:cardBackgroundColor="@color/colorAccent"
                    card_view:cardCornerRadius="4dp">

                <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_footer"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_sixteen"
                            android:text="Payment Info"
                            android:textStyle="bold"
                            android:padding="10dp"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_cost"
                                android:text="Total Cost: "
                                android:textSize="@dimen/text_size_twelve"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_twelve"
                                android:paddingRight="5dp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:id="@+id/tv_paid_amount"
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_paid_amount_value"
                                android:text="Total Paid Amount: "
                                android:textSize="@dimen/text_size_twelve"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_paid_amount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_twelve"
                                android:paddingRight="5dp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:id="@+id/tv_remaining_amount"
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_remaining_amount_value"
                                android:text="Total Pending Amount: "
                                android:textSize="@dimen/text_size_twelve"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_remaining_amount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_twelve"
                                android:paddingRight="5dp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_payment_mode"
                                android:textSize="@dimen/text_size_twelve"
                                android:text="Payment Mode:"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_payment_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/text_size_twelve"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_payment_status"
                                android:textSize="@dimen/text_size_twelve"
                                android:text="Payment Status:"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_payment_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/text_size_twelve"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/rl_multiple"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:layout_height="match_parent">


                        <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_multiple_payment"
                                android:textSize="@dimen/text_size_twelve"
                                android:text="Multiple Payment:"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_multiple_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/text_size_twelve"
                                android:textColor="@android:color/black"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/rl_payment"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:id="@+id/tv_accept_payment"
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/sp_payment_mode"
                                android:textSize="@dimen/text_size_twelve"
                                android:layout_alignBaseline="@+id/btn_pay_now"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="Accept Payment:"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>

                        <Spinner
                                android:id="@+id/sp_payment_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:minWidth="100dp"
                                android:layout_toLeftOf="@+id/btn_pay_now"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/sp_background"/>

                        <Button
                                android:id="@+id/btn_pay_now"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bg_nogradient_round"
                                android:text="Pay Total"
                                android:visibility="visible"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_fourteen"/>

                        <EditText
                                android:id="@+id/edt_amount"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:hint="amount"
                                android:inputType="numberDecimal"
                                android:padding="10dp"
                                android:layout_margin="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@+id/tv_accept_payment"
                                android:layout_alignBaseline="@+id/btn_pay_partial"
                                android:background="@drawable/edt_roun_rect"
                                android:layout_toLeftOf="@+id/btn_pay_partial"
                                android:textColorHint="@android:color/darker_gray"
                                android:minLines="1"
                                android:maxLines="1"/>

                        <Button
                                android:id="@+id/btn_pay_partial"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:background="@drawable/bg_nogradient_round"
                                android:text="Pay Partial"
                                android:layout_below="@+id/btn_pay_now"
                                android:visibility="visible"
                                android:layout_alignParentRight="true"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_fourteen"/>

                    </RelativeLayout>

                    <Button
                            android:id="@+id/btn_update_price"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/bg_nogradient_round"
                            android:text="Update Price"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_fourteen"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:id="@+id/btn_refund"
                            android:layout_height="40dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_nogradient_round"
                            android:text="Refund"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_fourteen"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">


                        <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_address"
                                android:textSize="@dimen/text_size_twelve"
                                android:textStyle="bold"
                                android:text="Delivery Address:"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/text_size_twelve"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>