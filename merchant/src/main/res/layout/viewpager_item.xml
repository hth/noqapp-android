<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_top"
        android:weightSum="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:weightSum="1">
            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                android:id="@+id/tv_title"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/pager_top_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/color_action_bar"
                android:textSize="24sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/square_white_bg_drawable"
                android:layout_weight=".25"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/strut"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"

                        android:background="@color/color_separator"/>
                    />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignRight="@id/strut"
                        android:layout_alignParentLeft="true"
                        android:gravity="center">
                        <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                            android:id="@+id/tv_current"
                            style="@style/style_join_queue_tv"
                            android:text="@string/serving"
                            android:textColor="@color/colorAddress"
                            android:textSize="16sp"
                            />
                        <com.noqapp.android.merchant.views.customsviews.TextViewRobotoLight
                            android:id="@+id/tv_current_value"
                            android:layout_below="@+id/tv_current"
                            style="@style/style_join_queue_tv"
                            android:textColor="@color/colorMobile"
                            android:textSize="36sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@id/strut"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                            android:id="@+id/tv_total"
                            style="@style/style_join_queue_tv"
                            android:text="@string/in_Queue"
                            android:textColor="@color/colorAddress"
                            android:textSize="16sp" />
                        <com.noqapp.android.merchant.views.customsviews.TextViewRobotoLight
                            android:id="@+id/tv_total_value"
                            android:layout_below="@+id/tv_total"
                            style="@style/style_join_queue_tv"
                            android:textSize="36sp"
                            android:textColor="@color/color_total_val"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:weightSum="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:weightSum="1">

                    <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                        android:id="@+id/tv_serving_customer"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorAddress"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/edt_counter_name"
                        android:layout_below="@+id/tv_serving_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/square_white_bg_drawable"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        android:maxLength="20"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="@string/counter_name"
                        android:textSize="18sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".70"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                            android:id="@+id/btn_start"
                            android:layout_width="@dimen/play_btn_size"
                            android:layout_height="@dimen/play_btn_size"

                            android:background="@mipmap/start"
                            android:text="@string/start"
                            android:textAllCaps="false"
                            android:textColor="@android:color/transparent"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight=".5">
                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                                android:id="@+id/btn_skip"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/skip"
                                android:text="@string/skip"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight=".5">

                        <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular
                            android:id="@+id/btn_next"
                            android:layout_width="@dimen/play_btn_size"
                            android:layout_height="@dimen/play_btn_size"
                            android:background="@mipmap/next"
                            android:text="@string/next"
                            android:textAllCaps="false"
                            android:textColor="@android:color/transparent"
                            android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>