<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@color/pager_top_bg"
                android:padding="5dp">


                <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_action_bar"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center">

                    <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_toLeftOf="@+id/iv_settings"
                        android:gravity="center"
                        android:hint="@string/setting"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorAddress"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@mipmap/setting"
                        android:gravity="center_vertical"
                        android:scaleType="centerInside" />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="@drawable/square_white_bg_drawable">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/strut"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/color_separator" />
                    />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@id/strut">

                        <ImageView
                            android:id="@+id/iv_out_of_sequence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="5dp"
                            android:src="@drawable/info" />

                        <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                            android:id="@+id/tv_current"
                            style="@style/style_join_queue_tv"
                            android:layout_centerInParent="true"
                            android:text="@string/serving"
                            android:textColor="@color/colorAddress"
                            android:textSize="15sp" />

                        <com.noqapp.android.merchant.views.customsviews.TextViewRobotoLight
                            android:id="@+id/tv_current_value"
                            style="@style/style_join_queue_tv"
                            android:layout_below="@+id/tv_current"
                            android:textColor="@color/colorMobile"
                            android:textSize="36sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@id/strut"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                            android:id="@+id/tv_total"
                            style="@style/style_join_queue_tv"
                            android:text="@string/in_Queue"
                            android:textColor="@color/colorAddress"
                            android:textSize="15sp" />

                        <com.noqapp.android.merchant.views.customsviews.TextViewRobotoLight
                            android:id="@+id/tv_total_value"
                            style="@style/style_join_queue_tv"
                            android:layout_below="@+id/tv_total"
                            android:textColor="@color/color_total_val"
                            android:textSize="36sp" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:weightSum="1">

                    <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                        android:id="@+id/tv_serving_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorAddress"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_serving_customer"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:gravity="center">

                        <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                            android:id="@+id/tv_counter_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_toLeftOf="@+id/iv_edit"
                            android:gravity="center"
                            android:hint="@string/counter_name"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="@color/colorAddress"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:background="@mipmap/edit"
                            android:gravity="center_vertical"
                            android:padding="10dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".70"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                                android:id="@+id/btn_pre"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/me_inactive"
                                android:text="Store closed"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />

                            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                                android:id="@+id/tv_pre"
                                style="@style/style_join_queue_tv"
                                android:layout_marginTop="5dp"
                                android:text="Store closed"
                                android:textColor="@color/colorAddress"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                                android:id="@+id/btn_start"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/start"
                                android:text="@string/start"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />

                            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                                android:id="@+id/tv_start"
                                style="@style/style_join_queue_tv"
                                android:layout_marginTop="5dp"
                                android:text="@string/start"
                                android:textColor="@color/colorAddress"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                                android:id="@+id/btn_post"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/me_select"
                                android:text="No more token"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />

                            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                                android:id="@+id/tv_post"
                                style="@style/style_join_queue_tv"
                                android:layout_marginTop="5dp"
                                android:text="No more token"
                                android:textColor="@color/colorAddress"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular

                                android:id="@+id/btn_skip"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/skip"
                                android:text="@string/skip"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />

                            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                                android:id="@+id/tv_skip"
                                style="@style/style_join_queue_tv"
                                android:layout_marginTop="5dp"
                                android:text="@string/skip"
                                android:textColor="@color/colorAddress"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.noqapp.android.merchant.views.customsviews.ButtonRalewayRegular
                                android:id="@+id/btn_next"
                                android:layout_width="@dimen/play_btn_size"
                                android:layout_height="@dimen/play_btn_size"
                                android:background="@mipmap/next"
                                android:text="@string/next"
                                android:textAllCaps="false"
                                android:textColor="@android:color/transparent"
                                android:textSize="15sp" />

                            <com.noqapp.android.merchant.views.customsviews.TextViewRalewayRegular
                                android:id="@+id/tv_next"
                                style="@style/style_join_queue_tv"
                                android:layout_marginTop="5dp"
                                android:text="@string/next"
                                android:textColor="@color/colorAddress"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>