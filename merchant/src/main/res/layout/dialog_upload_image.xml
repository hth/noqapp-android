<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/upload_image_margin"
    android:background="@drawable/dialog_bg"
    android:minHeight="@dimen/upload_image_dialog_min_height"
    android:maxHeight="@dimen/upload_image_dialog_max_height"
    android:orientation="vertical"
    android:outlineProvider="paddedBounds">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Confirm Image"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:minHeight="@dimen/upload_image_min_size"
        android:maxHeight="@dimen/upload_image_max_size"
        android:minWidth="@dimen/upload_image_min_size"
        android:maxWidth="@dimen/upload_image_max_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/upload_image_margin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnPositive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:text="UPLOAD"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>