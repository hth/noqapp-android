<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        //the rest of your codes...
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="style_join_queue_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">""</item>
    </style>

    <style name="style_mdh_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/mhd_sub_header_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minLines">2</item>
        <item name="android:background">@drawable/square_white_bg_drawable</item>
    </style>

    <style name="style_mdh_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/mhd_header_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
